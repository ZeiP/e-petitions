--

<%= t "mail.greeting" %> <%= @signature.name %>,

<% if @debate_outcome.debated? %>
<%= t "mail.debated.signed" %> “<%= @petition.action %>”

<% if @debate_outcome.overview? %>
<%= @debate_outcome.overview %>

<% end %>
<% if @debate_outcome.video_url? %>
<%= t "mail.debated.watch" %>  <%= @debate_outcome.video_url %>

<% end %>
<% if @debate_outcome.transcript_url? %>
<%= t "mail.debated.transcript" %>  <%= @debate_outcome.transcript_url %>

<% end %>
<% if @debate_outcome.debate_pack_url? %>
<%= t "mail.debated.research" %>  <%= @debate_outcome.debate_pack_url %>

<% end %>
<%= t "mail.debated.petition" %> <%= petition_url(@petition) %>

<% else %>
<%= t "mail.debated.no_debate_signed" %>  “<%= @petition.action %>”

<% if @debate_outcome.overview? %>
<%= @debate_outcome.overview %>

<% end %>
<%= t "mail.debated.petition" %> <%= petition_url(@petition) %>

<%= t "mail.more_about_committee" %> <%= help_url(anchor: "petitions-committee") %>

<% end %>
<%= t "mail.thanks" %> 
<%= t("petitions.emails.signoff_prefix") %>
<%= t("petitions.emails.signoff_suffix") %>

