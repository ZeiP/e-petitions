<div class="current-user-container">
    <% if (defined? current_user) && !current_user.nil? %>
        <span class ="user_name"><%= current_user.email %></span>
        <a href="<%= application_logout_saml_index_path %>">
             <%= t('login.log_out') + " " %><i class="fa fa-sign-out"></i>
        </a>
    <% else %>
        <a href="<%= sso_saml_index_path %>">
            <%= t('login.log_in') %>
            <i class="fa fa-sign-in"></i>
        </a>
    <% end %>
</div>