<%= form_tag local_petitions_path, method: 'get', enforce_utf8: false do %>
  <%= label_tag 'postcode', 'LOCALIZE_UK postcode', class: 'form-label' %>
  <div class="search-inline">
    <%= search_field_tag 'postcode', @postcode, class: 'form-control' %>
    <%= submit_tag 'Search', class: 'inline-submit', name: nil %>
  </div>
<% end %>
