<%= t "mail.greeting"%> <%= @petition.creator.name %>,

<%= t"mail.nearly_ready"%>

<%= t"mail.supported", sponsor: @sponsor.name, petition: @petition.action %>

<% if christmas_period? %>
<%= t "mail.checking.christmas", count: @sponsor_count %>
<% elsif easter_period? %>
<%= t "mail.checking.easter", count: @sponsor_count %>
<% else %>
<%= t "mail.checking.default", count: @sponsor_count %>
<% end %>

<%= t "mail.moderation_info" %>
<%= help_url(anchor: 'standards') %>

<%= t "mail.thanks"%>
<%= t("petitions.emails.signoff_prefix") %>
<%= t("petitions.emails.signoff_suffix") %>
