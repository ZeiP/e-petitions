<h3><%= link_to petition.action, petition_result_path(petition) %></h3>
<% case petition.state %>
<% when "open" %>
  <p><%= signature_count(:default, petition.signature_count) %></p>
<% when "closed" %>
  <p><%= signature_count(:default, petition.signature_count) %>, LOCALIZE_now closed</p>
<% when "rejected" %>
  <p>LOCALIZE_Rejected</p>
<% end %>
