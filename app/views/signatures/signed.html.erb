<h1 class="visuallyhidden"><%= number_with_delimiter(@signature.number) %> <%= t "signed.signatures"%></h1>

<div class="signature-confirmation">
  <%= render 'signature_confirmation' %>
  <p><%= t "signed.signature_added"%></p>
  <p><%= link_to @petition.action, petition_path(@petition) %></p>
</div>

<%= render 'share_petition', petition: @petition %>

<section class="section-panel" aria-labelledby="whats-next-heading">
  <%= render "petitions/threshold_details", petition: @petition %>
</section>

<% if @signature.constituency #TODO: CLEAN CODE %>
  <div class="section-panel" aria-labelledby="contact-your-mp-heading">
    <h2 id="contact-your-mp-heading">LOCALIZE_Contact your MP</h2>
    <p>LOCALIZE_Your constituency is <%= @signature.constituency.name %></p>
    <% if @signature.constituency.mp_id? %>
      <p>LOCALIZE_Your local MP is <%= @signature.constituency.mp_name %></p>
      <p><%= link_to "LOCALIZE_Contact your MP to let them know you have signed this petition", @signature.constituency.mp_url, rel: "external" %></p>
    <% end %>
  </div>

  <h2>LOCALIZE_Register to vote</h2>
  <p>LOCALIZE_To vote in local, national and EU elections, you must be registered to vote.</p>
  <p>LOCALIZE_It takes less than 5 minutes.</p>
  <a href="LOCALIZE_https://www.gov.uk/register-to-vote" rel="external">LOCALIZE_Register to vote</a>
<% end %>